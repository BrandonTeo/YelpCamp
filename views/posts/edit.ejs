<!-- PARAMS: `post` -->
<%- include('../partials/header.ejs') %>

    <!-- NOT USED (REPLACED BY MODAL) -->

    <div class="container">
        <div class="inner container">
            <div class="card border-info">
                <div class="card-body">
                    <h1>Edit Posting</h1>
                    <form action="/camps/<%= post._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" name="updatedPost[title]" value="<%= post.title %>">
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input type="number" class="form-control" name="newPost[price]" value="<%= post.price %>" step="0.01">
                        </div>
                        <div class="form-group">
                            <label>Image source</label>
                            <input type="text" class="form-control" name="updatedPost[image]" value="<%= post.image %>">
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <textarea type="text" class="form-control"  rows="6" name="updatedPost[content]"><%= post.content %></textarea>
                        </div>
                        <button type="submit" class="submit-btn btn btn-primary">Submit</button>
                        <a class="btn btn-outline-warning" href="/camps/<%= post._id %>">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

<%- include('../partials/footer.ejs') %>